<Defs>
    <AbilityDef>
        <defName>EmperorLOTDAbility</defName>
        
        <label>The Legion Beckons</label>
        
        
        <description>Summon a member of the Legion of the Damned to fight for you.</description>
        <!-- Placeholder icon path -->
        <iconPath>Emperor/Headgear/GW_HRM_Emperor_LaurelsAura</iconPath> 
        
        
        <cooldownTicksRange>72000</cooldownTicksRange>
        <displayOrder>300</displayOrder>
        
        <!-- <cooldownPerCharge>true</cooldownPerCharge> -->
        <!-- <charges>1</charges> -->
        
    
        <comps>
            <li Class="gwrulers.CompProperties_AbilityEmperorLOTD">
              <psychicSensitivityExtraSummmonFactor>0.5</psychicSensitivityExtraSummmonFactor>  <!-- adds more pawns to summon for every additional 50% psychic sensitivity -->
              <factionDef>Empire</factionDef>  <!-- the home faction of the summoned pawns. it being the empire is just placeholder -->
              <pawnKindDef>LOTD</pawnKindDef>  <!-- the pawnkind of the summoned pawns -->
            </li>
            <li Class="CompProperties_AbilityEffecterOnTarget">
              <effecterDef>Skip_Exit</effecterDef>
              <maintainForTicks>60</maintainForTicks>
              <scale>0.42</scale>
            </li>
            <li Class="CompProperties_AbilityFleckOnTarget">
              <fleckDefs>
                <li>PsycastSkipInnerExit</li>
                <li>PsycastSkipOuterRingExit</li>
              </fleckDefs>
              <scale>0.42</scale>
              <sound>Psycast_Skip_Exit</sound>
              <preCastTicks>5</preCastTicks>
            </li>
        </comps>
        
        <targetRequired>True</targetRequired>
        <verbProperties>
            <verbClass>Verb_CastAbility</verbClass>
            <!-- <label>Summon</label> -->
            <!-- <hastarget>True</hastarget> -->
            <!-- <targetWorldMap>False</targetWorldMap> -->
            <range>80</range>
            <warmupTime>0.25</warmupTime>
            <!-- <burstShotCount>1</burstShotCount> -->
            <soundCast>ChargeBlaster</soundCast> <!-- Placeholder sound -->
            <requireLineOfSight>True</requireLineOfSight>
            <targetParams>
                <!-- <canTargetAnimals>False</canTargetAnimals> -->
                <!-- <canTargetPawns>False</canTargetPawns> -->
                <!-- <canTargetBuildings>False</canTargetBuildings> -->
                <canTargetLocations>True</canTargetLocations>
            </targetParams>
        </verbProperties>
    </AbilityDef>
</Defs>
